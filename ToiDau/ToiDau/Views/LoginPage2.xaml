<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ToiDau.Views.LoginPage2"
             NavigationPage.HasNavigationBar="False">

    <StackLayout>
        <Grid Margin="0,150,0,0"
              VerticalOptions="StartAndExpand"
              HorizontalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Label Text="Your number:" 
                   TextColor="Black" 
                   FontSize="18"
                   HorizontalOptions="Center"
                   Grid.ColumnSpan="4"/>
            <Label Text="{Binding Number}" 
                   TextColor="Black"
                   FontSize="18"
                   Grid.Row="1"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   HorizontalOptions="Center"/>
            <Label Text="Enter verify code via sms:" 
                   TextColor="Black"
                   FontSize="18"
                   Grid.Row="2"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   HorizontalOptions="Center"/>
            <Image x:Name="SquareImage1"
                   Grid.Row="3"
                   Grid.Column="0"/>
            <Entry x:Name="entryPin1" 
                   Grid.Row="3"                   
                   Grid.Column="0"
                   Text="{Binding Number1}"
                   TextChanged="Entry_TextChanged"
                   FontSize="18"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   Keyboard="Numeric"/>
            <Image x:Name="SquareImage2"
                   Grid.Row="3"
                   Grid.Column="1"/>
            <Entry x:Name="entryPin2"
                   Grid.Row="3"
                   TextChanged="Entry_TextChanged"
                   Grid.Column="1"
                   Text="{Binding Number2}"
                   FontSize="18"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   Keyboard="Numeric"/>
            <Image x:Name="SquareImage3"
                   Grid.Row="3"
                   Grid.Column="2"/>
            <Entry x:Name="entryPin3"
                   Grid.Row="3"
                   TextChanged="Entry_TextChanged"
                   Grid.Column="2"
                   Text="{Binding Number3}"
                   FontSize="18"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   Keyboard="Numeric"/>
            <Image x:Name="SquareImage4"
                   Grid.Row="3"
                   Grid.Column="3"/>
            <Entry x:Name="entryPin4"
                   Grid.Row="3"
                   TextChanged="Entry_TextChanged"
                   Grid.Column="3"
                   Text="{Binding Number4}"
                   FontSize="18"
                   Keyboard="Numeric"                   
                   TextColor="Black"
                   HorizontalOptions="Center"/>
        </Grid>

        <Button x:Name="buttonLogin" 
                Text="Login" 
                VerticalOptions="End" 
                HorizontalOptions="Center" 
                WidthRequest="Infinity" 
                BackgroundColor="#103667" 
                TextColor="White"
                Command="{Binding NavigateToLoginPage3Command}"/>
    </StackLayout>
</ContentPage>